<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/workshop_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_222227"
        android:src="@drawable/background_detail_workshop">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/vector_left"
                app:layout_constraintBottom_toTopOf="@+id/category"
                app:layout_constraintStart_toStartOf="@+id/category" />

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="조깅하기"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="130dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textSize="32sp"
                />
        <TextView
            android:id="@+id/goal_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="목표| "
            app:layout_constraintTop_toBottomOf="@+id/category"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/goal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="하루 30번씩 공원 뛰기"
            app:layout_constraintTop_toBottomOf="@+id/category"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/startdate_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="시작일 |"
            app:layout_constraintTop_toBottomOf="@+id/goal_title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"/>

            <TextView
                android:id="@+id/startdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2024.01.04"
                app:layout_constraintTop_toBottomOf="@+id/goal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="100dp"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        <TextView
            android:id="@+id/restdate_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="남은 기간"
            app:layout_constraintTop_toBottomOf="@+id/startdate_title"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:textSize="12sp"/>

            <TextView
                android:id="@+id/now"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="달성률"
                app:layout_constraintTop_toBottomOf="@+id/startdate_title"
                android:layout_marginTop="15dp"
                android:layout_marginStart="250dp"
                android:textColor="@color/white"
                android:textSize="12sp"/>


        <TextView
            android:id="@+id/restdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-66"
            app:layout_constraintTop_toBottomOf="@+id/restdate_title"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/restdate_title"
            android:textColor="#FF5935"
            android:textSize="32sp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                app:layout_constraintTop_toBottomOf="@+id/now"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/now"
                android:textColor="@color/white"
                android:textSize="32sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/stone_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:src="@drawable/stone_red_workshop"
            />
        <TextView
            android:id="@+id/stonoepowder_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="얻은 돌가루"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/stonepowder_add_how"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100g"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="32sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text=" 달성현황"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/black_222227"
            app:layout_constraintTop_toBottomOf="@id/gridLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <GridLayout
            android:id="@+id/gridLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3">

            <ImageView
                android:id="@+id/rectangle_white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/rectangle_white"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/rectangle_black"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:src="@drawable/rectangle_black"/>

        </GridLayout>

            <TextView
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="총 달성 수"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@+id/all_number"/>
            <TextView
                android:id="@+id/mid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="중간 달성 수"
                android:textColor="@color/white"
                android:layout_marginStart="170dp"
                app:layout_constraintTop_toBottomOf="@+id/all_number"/>
            <TextView
                android:id="@+id/never"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="미달성 수"
                android:textColor="@color/white"
                android:layout_marginStart="320dp"
                app:layout_constraintTop_toBottomOf="@+id/all_number"/>


            <TextView
                android:id="@+id/all_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="10"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:textSize="24sp"
               />
            <TextView
                android:id="@+id/mid_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginStart="200dp"
                android:layout_marginTop="100dp"
               />
            <TextView
                android:id="@+id/never_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:text="2"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginStart="335dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:text=" 오늘"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/black_222227"
            app:layout_constraintTop_toBottomOf="@id/gridLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_222227"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="오늘의 달성 현황을 \n기록해주세요!"
            android:textColor="@color/white"
            android:layout_marginStart="130dp"
            android:textSize="10pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
      />

            <ImageView
                android:layout_width="109dp"
                android:layout_height="54dp"
                android:src="@drawable/container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



            <ImageView
                android:id="@+id/record"
                android:layout_width="435dp"
                android:layout_height="65dp"
                android:background="@color/black_222227"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/box_record"
                app:layout_constraintTop_toBottomOf="@id/text5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" + 기록하기"
                android:textColor="@color/white"
                android:textSize="9pt"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="107dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:text=" 2024년 1월"
            android:textSize="10pt"
            android:textColor="@color/white"
            android:background="@color/black_222227"
            app:layout_constraintTop_toBottomOf="@id/gridLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_222227"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_date"
            android:orientation="vertical">






        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>


    </ScrollView>

</layout>



