<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".todaycheck_workshop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_222227"
        android:orientation="horizontal">

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="목표하고자 하는 바를 어느 정도 이루셨나요"
        android:textColor="@color/white"
        android:textSize="7pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="489dp"
        android:gravity="center"
        android:text="오늘도 열심히 하셨나요?"
        android:textColor="@color/white"
        android:textSize="10pt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="680dp"
        android:text="확인"

        />

    <ImageView
        android:layout_width="296dp"
        android:layout_height="643dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/yes" />

    <ImageView
        android:layout_width="107dp"
        android:layout_height="34dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="375dp"
        android:src="@drawable/tdesign_circle" />


    <ImageView
        android:layout_width="296dp"
        android:layout_height="643dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/soso" />
        <ImageView
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="450dp"
            android:src="@drawable/iconoir_triangle" />


    <ImageView
        android:id="@+id/x"
        android:layout_width="296dp"
        android:layout_height="643dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/no" />

    <ImageView
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginStart="360dp"
        android:layout_marginBottom="620dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/x" />


</FrameLayout>
</layout>
