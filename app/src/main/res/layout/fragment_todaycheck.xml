<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nv_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_back_black">

        <ImageView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/x" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="오늘도 열심히 하셨나요?"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/x" />

        <TextView
            android:id="@+id/tv_title_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            android:text="목표하고자 하는 바를 어느 정도 이루셨나요"
            android:textColor="#B7B1BB"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />



        <TextView
            android:id="@+id/icon_all"
            android:layout_width="311dp"
            android:layout_height="73dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/round_4_rectangle_todaycheck"
            android:drawableStart="@drawable/icon_circle"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="네, 완벽히 달성했어요!"
            android:gravity="center"
            android:textColor="#D3D3D3"
            android:textSize="16sp"
            android:paddingStart="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_sub" />

        <TextView
            android:id="@+id/icon_mid"
            android:layout_width="311dp"
            android:layout_height="73dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_4_rectangle_todaycheck"
            android:drawableStart="@drawable/icon_triangle"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="어느 정도는 달성했어요!"
            android:gravity="center"
            android:paddingStart="42dp"
            android:textColor="#D3D3D3"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_all" />


        <TextView
            android:id="@+id/icon_none"
            android:layout_width="311dp"
            android:layout_height="73dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_4_rectangle_todaycheck"
            android:drawableStart="@drawable/icon_x"
            android:drawablePadding="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="아니요..달성하지 못했어요"
            android:gravity="center"
            android:textColor="#D3D3D3"
            android:textSize="16sp"
            android:paddingStart="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon_mid" />


        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/icon_none"
        android:layout_marginTop="175dp"
        android:text="확인"

        />




</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
