<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_222227">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/workshop_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relatveLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

<!--            아이콘 배치 -->
            <ImageView
                android:id="@+id/icon_mypage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="380dp"
                android:src="@drawable/mypage"/>

            <ImageView
                android:id="@+id/icon_ring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:src="@drawable/ring" />

        </RelativeLayout>

        <TextView
            android:id="@+id/subtitlie_workshop"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="20.1dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:text="다짐한 목표로\n새로운 돌을 만들어보세요"
            android:textColor="@color/white"
            android:textSize="24dp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.002"
            app:tabTextColor="@color/white"
            android:background="@drawable/background_workshop"
            >
            <com.google.android.material.tabs.TabItem
                android:id="@+id/category_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/category_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/category_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공부"/>
            <com.google.android.material.tabs.TabItem
                android:id="@+id/category_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일상"/>
        </com.google.android.material.tabs.TabLayout>


       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/relativeLayout"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/background_workshop">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_box"
                android:orientation="vertical"/>

           <ImageView
               android:id="@+id/rectangle_plus"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/rectangle_plus"
               android:layout_marginTop="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/recyclerview" />

           <TextView
               android:id="@+id/plus"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+"
               android:textColor="@color/white"
               android:textSize="10pt"
               app:layout_constraintTop_toTopOf="@+id/rectangle_plus"
               app:layout_constraintStart_toStartOf="@+id/rectangle_plus"
               app:layout_constraintEnd_toEndOf="@+id/rectangle_plus"
               app:layout_constraintBottom_toBottomOf="@+id/rectangle_plus"
               android:layout_marginTop="8dp"
               android:layout_marginStart="8dp"
               android:layout_marginEnd="8dp"
               android:layout_marginBottom="8dp"
               />

       </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</ScrollView>
</RelativeLayout>
</layout>