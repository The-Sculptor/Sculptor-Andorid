<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="14dp">
    <ImageView
        android:id="@+id/item_usingbg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store_item_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_usingitem_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell"
        app:layout_constraintStart_toStartOf="@+id/item_usingbg_img"
        app:layout_constraintTop_toTopOf="@+id/item_usingbg_img"
        app:layout_constraintEnd_toEndOf="@+id/item_usingbg_img"
        app:layout_constraintBottom_toBottomOf="@+id/item_usingbg_img"/>
    <ImageView
        android:id="@+id/item_usingbg_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store_item_space_circle"
        app:layout_constraintStart_toStartOf="@+id/item_usingbg_img"
        app:layout_constraintTop_toBottomOf="@+id/item_usingbg_img"
        app:layout_constraintEnd_toStartOf="@+id/howmuch_tv"
        android:layout_marginStart="14dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/howmuch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/item_usingbg_img"
        app:layout_constraintEnd_toEndOf="@+id/item_usingbg_img"
        app:layout_constraintStart_toStartOf="@id/item_usingbg_circle"
        android:layout_marginTop="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>