<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_8_rectangle_color_212021">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_rock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_d_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-66"
        android:paddingVertical="4dp"
        android:paddingHorizontal="7dp"
        android:background="@drawable/round_8_rectangle_orange"
        android:textColor="@color/main_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_achievement_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_8_rectangle_white"
        android:paddingVertical="4dp"
        android:paddingHorizontal="7dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="80%"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_d_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_d_day" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_statue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_orange"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/iv_statue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="조깅하기"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goal_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 | "
        android:textSize="16sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#BFBFBF"
        app:layout_constraintTop_toBottomOf="@id/tv_statue_name"
        app:layout_constraintStart_toStartOf="@+id/tv_statue_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="하루 2시간씩 UX 리서치"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/tv_goal_main"
        app:layout_constraintTop_toTopOf="@+id/tv_goal_main" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_goal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/roboto_light"
        android:text="2024.01.04"
        android:textColor="@color/gray_908F90"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_goal_main"
        app:layout_constraintTop_toBottomOf="@id/tv_goal" />







</androidx.constraintlayout.widget.ConstraintLayout>