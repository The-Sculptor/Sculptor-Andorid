<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/item_statue_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/item_statue_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/store_statues"
        app:layout_constraintStart_toStartOf="@+id/item_statue_back_img"
        app:layout_constraintEnd_toEndOf="@+id/item_statue_back_img"
        app:layout_constraintTop_toTopOf="@+id/item_statue_back_img"
        app:layout_constraintBottom_toBottomOf="@+id/item_statue_back_img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조각상 명"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/item_statue_back_img"
        app:layout_constraintEnd_toEndOf="@+id/item_statue_back_img"
        app:layout_constraintStart_toStartOf="@id/item_statue_back_img"
        android:layout_marginTop="6dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>