<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@color/main_back_black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17"
        android:background="@drawable/circle_drak_gray"
        android:textColor="#D7D7D7"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="2dp"
        android:layout_height="22dp"
        android:background="#555555"
        app:layout_constraintStart_toStartOf="@id/tv_number"
        app:layout_constraintEnd_toEndOf="@id/tv_number"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_achievement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달성"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#E6E6E6"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintStart_toEndOf="@id/tv_number"
        android:layout_marginStart="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10g"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#A7A7A7"
        app:layout_constraintTop_toBottomOf="@id/tv_achievement"
        app:layout_constraintStart_toStartOf="@id/tv_achievement" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_achievement_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>