<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/store_fragment"
        android:background="@color/gray_606060"
        >

        <TextView
            android:id="@+id/Store"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="store"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bell_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/person_iv"
            />
        <ImageView
            android:id="@+id/person_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/person"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            app:layout_constraintTop_toBottomOf="@+id/Store"
            app:layout_constraintBottom_toTopOf="@+id/tabLayout1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"
            />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1C1C1C"
            app:layout_constraintBottom_toTopOf="@+id/tabLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SaveBtn"
            app:tabIndicatorColor="#D2D2D2"
            app:tabIndicatorFullWidth="true"
            app:tabSelectedTextColor="#D2D2D2"
            app:tabTextColor="@color/gray_606060">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/MY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Stone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원석" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Them"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테마" />
        </com.google.android.material.tabs.TabLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2B2B2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout1"
            app:tabGravity="fill"
            app:tabIndicatorColor="#00FFFFFF"
            app:tabSelectedTextColor="#D2D2D2"
            app:tabTextColor="@color/gray_606060">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/myStatue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 조각상" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/UsingItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="착용중인 상품" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/BoughtItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매한 상품" />
        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/Items_content_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#2B2B2F"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>