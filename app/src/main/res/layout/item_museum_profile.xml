<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="336dp"
    android:layout_marginHorizontal="24dp">

    <TextView
        android:id="@+id/museum_sculptor_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/museum_round_rectangle_daybox"
        android:fontFamily="@font/pretendard_medium"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="D+66"
        android:textColor="#FF5935"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/museum_sculptor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/roboto_bold"
        android:text="UX리서치"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/museum_sculptor_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/roboto_regular"
        android:text="2023.10.06"
        android:textColor="#ABABAB"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/museum_sculptor_shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:src="@drawable/img_museum_sculptor_shelf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="선반"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/museum_sculptor_shelf"
        app:layout_constraintTop_toTopOf="@+id/museum_sculptor_shelf" />

    <ImageView
        android:id="@+id/museum_sculptor_img"
        android:layout_width="118dp"
        android:layout_height="184dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="42dp"
        android:src="@drawable/img_museum_sculptor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>