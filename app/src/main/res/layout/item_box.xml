<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_goal_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:visibility="visible"
    android:layout_marginBottom="16dp"
    android:background="@drawable/workshop_back_orange">
    <TextView
        android:id="@+id/tv_d_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autoSizeMaxTextSize="16dp"
        android:background="@drawable/dday_text_back_orange"
        android:fontFamily="@font/pretendard_medium"
        android:paddingHorizontal="9dp"
        android:paddingVertical="3dp"
        android:text="D-66"
        android:textColor="@color/main_back_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="15dp" />

    <TextView
        android:id="@+id/tv_d_day2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_bold"
        android:text="UX 리서치"
        android:textColor="@color/main_back_black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tv_d_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_d_day" />


    <TextView
        android:id="@+id/tv_date_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="2024.01.04"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stone_item"
        app:layout_constraintStart_toStartOf="@+id/tv_d_day2" />

    <ImageView
        android:id="@+id/tv_stone_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_4_rectangle_black"
        android:src="@drawable/stone"
        android:paddingHorizontal="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="24dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
